{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "/assets/*": [
        "assets/*"
      ],
      "/components/*": [
        "components/*"
      ],
      "/pages/*": [
        "pages/*"
      ],
      "/styles/*": [
        "styles/*"
      ]
    },
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "types": [
      "styled-components"
    ]
  },
  "include": [
    "src"
  ]
}